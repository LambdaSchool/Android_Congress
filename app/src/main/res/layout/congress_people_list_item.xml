<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="10dp"
    app:cardCornerRadius="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_title"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textAlignment="center"
            android:text="Sen. John McCain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_party"
            android:layout_marginEnd="20dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/layout_details_1"
            app:layout_constraintTop_toBottomOf="@id/text_title"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_dob"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="DOB: 11/11/1111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_gender"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="Gender: Male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_state"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="State: AZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_facebook"
            android:textSize="18dp"
            android:text="Facebook: https://totallyfakeurl.com/"
            app:layout_constraintTop_toBottomOf="@id/layout_details_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_twitter"
            android:textSize="18dp"
            android:text="Twitter: https://totallyfakeurl.com/"
            app:layout_constraintTop_toBottomOf="@id/text_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_youtube"
            android:textSize="18dp"
            android:text="Youtube: https://totallyfakeurl.com/"
            app:layout_constraintTop_toBottomOf="@id/text_twitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>