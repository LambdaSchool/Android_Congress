<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <TextView
        android:id="@+id/text_title"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="32sp"
        android:text="Sen. Trent Kelly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_party"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="24sp"
            android:text="Party: D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_dob"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="24sp"
            android:text="Date of Birth: 11/11/1111"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_website"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="Website: https://totallyfakeurl.com/"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_track_id"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="24sp"
            android:text="Gov Track ID: 2352398"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_twitter"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="24sp"
            android:text="Twitter: trentkellyrulz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_facebook"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="24sp"
            android:text="Facebook: trentkellyrulz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>